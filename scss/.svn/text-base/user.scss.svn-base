
.user-center {
  .line-wrap {
    border: solid 1px $main-border-color;

    .header-tab {
      margin: 30px;
      border-bottom: solid 2px #CCCCCC;
      a {
        color: $main-font-color;
        font-size: 16px;
        display: inline-block;
        padding: 10px;
        margin-bottom: -2px;
        &.active {
          border-bottom: solid 2px #0CA5E9;
          color: #000;
        }
      }
    }

    .form-wrap {
      margin: 0 30px;
      .user-info {
        .form-group {
          height: 40px;
          .control-label {
            text-align: right;
            margin-top: 5px;
            margin-right: -5px;
            .icon-star {
              color:red;
            }
          }
          .col-xs-4 {
            padding-left: 0;
          }
          .error-tip {
            color: red;
            font-size: 12px;
          }
        }

      }
      .settings {
        .pwd-wrap{

          margin-bottom: 15px;
        }

      }
    }
  }
}