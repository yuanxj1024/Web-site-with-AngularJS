<div class="main-nav">
  <div ng-include="'./page/header.html'" ></div>
</div>
<div ng-controller="PrecontractListCtrl">
<div class="sub-header-wrap">
  <div class="container">
    <ul class="nav nav-pills" ng-if="currentMediaType == 1">
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.star">明星号资源</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.starprecontract">预约明星资源活动</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.precontractList({'mediaType':1})">预约活动列表</a></li>
    </ul>
    <ul class="nav nav-pills" ng-if="currentMediaType == 2">
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.wechat">公众号资源</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.wechatprecontract">预约公众号资源活动</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.weichatPreList">预约活动列表</a></li>
    </ul>
    <ul class="nav nav-pills" ng-if="currentMediaType == 3">
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.weibo">微博资源</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.weiboprecontract">预约微博资源活动</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.weiboPreList">预约活动列表</a></li>
    </ul>
    <ul class="nav nav-pills" ng-if="currentMediaType == 4">
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.friends">朋友圈资源</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.friendsprecontract">预约朋友圈资源活动</a></li>
      <li ui-sref-active="active"><a href="#" ui-sref="advertiser.friendsPreList">预约活动列表</a></li>
    </ul>
  </div>
</div>
<div class="precontract-wrap page-minHeight">
  <div class="precontract-body container">
    <div class="header">
      <h4 class="page-title"><i class="glyphicon glyphicon-file"></i> {{currentMediaName}}预约活动列表</h4>
    </div>
    <div class="main-body marginTop">
      <table class="table table-striped table-hover">
        <tr>
          <th>活动名称</th>
          <!--<th>活动简述</th>-->
          <th>预约结果反馈时间</th>
          <th>预计推广时间</th>
          <th>推广结束时间</th>
          <th>创建时间</th>
          <th>状态</th>
          <th>操作</th>
        </tr>
        <tr ng-repeat="item in dataList track by $index">
          <td>{{item.Title}}</td>
          <td>{{item.FeedbackTime}}</td>
          <td>{{item.StartTime}}</td>
          <td>{{item.EndTime}}</td>
          <td>{{item.AddTime}}</td>
          <td>{{getStatus(item.State)}}</td>
          <td><a ng-click="editItem(item.ID)" href="javascript:;">修改</a>&nbsp;<a ng-click="removeItem(item.ID)" href="javascript:;">删除</a></td>
        </tr>
        <tr ng-if="dataList.length <=0">
          <td colspan="8" class="no-data">暂无数据</td>
        </tr>
      </table>
      <div class="txt-center">
        <pagination rotate="false" max-size="10" ng-change="pageChanged(currentPageIndex)" items-per-page="pageSize" boundary-links="true" total-items="totalItems" ng-model="currentPageIndex" class="pagination-sm" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></pagination>
      </div>
    </div>
  </div>
</div>
</div>