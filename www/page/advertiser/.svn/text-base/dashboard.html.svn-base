<div class="main-nav">
  <div ng-include="'./page/header.html'" ></div>
</div>
<div class="dashboard-wrap" ng-controller="DashboardCtrl">
  <div class="container dashboard">
    <div class="top">
      <div class="account">
        <div>余额:</div>
        <div><span class="money">{{user.AvailableBalance || 1980 | currency:''}}</span>元</div>
        <div>
          <a ng-click="test()" href="#" class="btn btn-primary center">充值</a>
        </div>
      </div>
      <div class="order-info">
        <div class="item">
          <span>总订单数:</span>
          <span class="right"><span class="money">0</span>单</span></div>
        <div class="item">
          <span>进行中的订单数:</span>
          <span class="right"><span class="money">2</span>单</span>
        </div>
      </div>
      <div class="message">
        <div class="msg-header">公告</div>
        <div class="msg-body">
          <div class="item" ng-repeat="item in noticeList track by $index">
            <a ng-click="openNotice(item.ID)" href="javascript:;">{{item.Title}}</a><span>{{calcDate(item.AddTime) | date : 'yyyy-MM-dd'}}</span>
          </div>
          <div class="item" ng-if="noticeList.length<= 0">暂无公告</div>
        </div>
        <!--<a class="more" href="#">详情>></a>-->
      </div>
    </div>
    <div class="body">
      <div class="header">活动列表</div>
      <table class="table table-striped table-hover">
        <thead>
        <tr>
        <th>活动名称</th>
        <th>平台</th>
        <th>创建时间</th>
        <th>预计推广开始时间</th>
        <th>预计推广结束时间</th>
        <th>状态</th>
        <th>操作</th>
        </tr>
        </thead>
        <tr ng-repeat="item in orderList track by $index">
          <td>{{item.Title}}</td>
          <td>微信</td>
          <td>{{item.AddTime | date : 'yyyy-MM-dd'}}</td>
          <td>{{item.StartTime | date: 'yyyy-MM-dd'}}</td>
          <td>{{item.EndTime | date: 'yyyy-MM-dd'}}</td>
          <td>{{getStatus(item.State)}}</td>
          <td><a href="#">修改</a></td>
        </tr>
        <tr class="" ng-if="orderList.length <=0">
          <td class="no-data" colspan="7">
            暂无订单数据
          </td>
        </tr>
      </table>
    </div>
