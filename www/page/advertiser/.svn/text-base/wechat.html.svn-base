<div class="main-nav">
    <div ng-include="'./page/header.html'" ></div>
</div>
<div>
    <div class="sub-header-wrap">
        <div class="container center">
            <ul class="nav nav-pills">
                <li ui-sref-active="active"><a href="#" ui-sref="advertiser.wechat({'mediaType':2})">公众号资源</a></li>
                <li><a href="#" ui-sref="advertiser.wechatprecontract">预约公众号资源活动</a></li>
                <li><a href="#" ui-sref="advertiser.precontractList({'mediaType':2})">预约活动列表</a></li>
            </ul>
        </div>
    </div>
    <div class="container center star-wrap">
        <div class="create-order-step-wrap ">
            <div class="step-list">
                <span><i class="glyphicon">1</i>免费预订，获取报价</span>
                <span class="arrow"><i class="glyphicon glyphicon-arrow-right"></i></span>
                <span><i class="glyphicon">2</i>多方比价，择优资源</span>
                <span class="arrow"><i class="glyphicon glyphicon-arrow-right"></i></span>
                <span><i class="glyphicon">3</i>沟通协调，促成合作</span>
                <span class="arrow"><i class="glyphicon glyphicon-arrow-right"></i></span>
                <span><i class="glyphicon">4</i>活动完成，安全交易</span>
            </div>
            <div class="button-wrap">
                <button ng-click="createOrder()" class="btn btn-success">立即创建预约订单</button>
            </div>
        </div>
        <div class="create-order-fixed-wrap"><span class="selected">已选中234项资源</span><button class="btn btn-success" ng-click="createOrder()">立即创建预约订单</button></div>

        <div class="search-wrap">
            <div class="search-input row">
                <div class="search-left">
                    <ul class="search-nav">
                        <li ng-class="{true:'active'}[tabIndex ==1]"><a ng-click="tabIndex = 1" href="">全部资源</a></li>
                        <li ng-class="{true:'active'}[tabIndex ==2]"><a ng-click="tabIndex = 2" href="">收藏资源</a></li>
                        <!--<li ng-class="{true:'active'}[tabIndex ==3]"><a ng-click="tabIndex = 3" href="">报价单资源</a></li>-->
                    </ul>
                    <div class="input-wrap">
                        <input type="text" class="" placeholder="输入关键字">
                        <button class="glyphicon glyphicon-search" type="button"></button>
                    </div>
                </div>
            </div>
        </div>
        <!-- 资源-->
        <div class="search-arg-wrap" ng-if="tabIndex == 1">
            <ul class="">
                <li class="block">
                    <div class="arg-name"><i class="glyphicon glyphicon-play"></i>常用分类</div>
                    <div class="arg-el" ng-class="{true:'hide-sub'}[!commonTag]">
                        <a href="javascript:;" ng-model="selected.common" btn-radio="0">不限</a>
                        <a href="javascript:;" ng-model="selected.common" btn-radio="item" ng-repeat="item in searchTypeData.common track by $index">{{item.ClassName}}</a>
                    </div>
                    <div class="more-drop">
                        <a ng-class="{true:'active'}[commonTag]" ng-click="commonTag = !commonTag" href="#">更多 <i class="glyphicon glyphicon-chevron-down"></i></a>
                    </div>
                </li>
                <li class="block">
                    <div class="arg-name"><i class="glyphicon glyphicon-play "></i>粉丝量</div>
                    <div class="arg-el">
                        <a href="javascript:;" ng-model="selected.fansNumber" btn-radio="0">不限</a>
                        <a href="javascript:;" ng-model="selected.fansNumber" btn-radio="item" ng-repeat="item in searchTypeData.fansNumber track by $index">{{item.ClassName}}</a>
                    </div>
                    <!--<div class="more-drop">-->
                        <!--<a ng-class="{true:'active'}[industryTag]" ng-click="industryTag = !industryTag" href="#">更多 <i class="glyphicon glyphicon-chevron-down"></i></a>-->
                    <!--</div>-->
                </li>
                <li class="block">
                    <div class="arg-name"><i class="glyphicon glyphicon-play"></i>价格</div>
                    <div class="arg-el">
                        <a href="javascript:;" ng-model="selected.price" btn-radio="0">不限</a>
                        <a href="javascript:;" ng-model="selected.price" btn-radio="item" ng-repeat="item in searchTypeData.priceList track by $index">{{item.ClassName}}</a>
                    </div>
                    <!--<div class="more-drop">-->
                        <!--<a ng-class="{true:'active'}[employmentTag]" ng-click="employmentTag = !employmentTag" href="#">更多 <i class="glyphicon glyphicon-chevron-down"></i></a>-->
                    <!--</div>-->
                </li>
                <li class="block ng-hide">
                    <div class="arg-name"><i class="glyphicon glyphicon-play"></i>参考报价</div>
                    <div class="arg-el" >
                        <a href="#" ng-model="argTFFF" btn-radio="'all'">不限</a>
                        <a href="#" ng-model="argTFFF" btn-radio="'3'">不限</a>
                        <a href="#" ng-model="argTFFF" btn-radio="'23'">不限</a>
                    </div>
                </li>
            </ul>
            <div class="search-tip-wrap">
                <span class="tip-txt">筛选条件：</span>
                <div class="tips">
                    <a ng-if="selected.common.ID" ng-click="selected.common = 0" href="">{{selected.common.ClassName}}<i class="glyphicon glyphicon-remove"></i></a>
                    <a ng-if="selected.industry.ID" ng-click="selected.industry = 0" href="">{{selected.industry.ClassName}}<i class="glyphicon glyphicon-remove"></i></a>
                    <a ng-if="selected.employment.ID" ng-click="selected.employment = 0" href="">{{selected.employment.ClassName}}<i class="glyphicon glyphicon-remove"></i></a>
                    <a ng-if="selected.fansNumber.ID" ng-click="selected.fansNumber = 0" href="">{{selected.fansNumber.ClassName}}<i class="glyphicon glyphicon-remove"></i></a>
                    <a ng-if="selected.price.ID" ng-click="selected.price = 0" href="">{{selected.price.ClassName}}<i class="glyphicon glyphicon-remove"></i></a></div>
            </div>
            <div class="data-table">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>&nbsp;</th>
                        <th>微信账号</th>
                        <th>性别</th>
                        <th>单图文报价</th>
                        <th>多图文第一条</th>
                        <th>多图文第二条</th>
                        <th>多图文第3~N</th>
                        <th>操作</th>
                    </tr>
                    <tr ng-repeat="item in list track by $index">
                        <td>
                            <label>
                                <input type="checkbox" ng-model="searchArgs.checkedItems[item.ID]">
                            </label></td>
                        <td>{{item.WX}}</td>
                        <!--<td>{{item.NickName}}</td>-->
                        <!--<td>{{item.FansNumber}}</td>-->
                        <!--<td>{{item.ClassName}}</td>-->
                        <!--<td>{{item.ClassMediaFieldName}}</td>-->
                        <!--<td>{{item.ClassProfessionName}}</td>-->
                        <td>{{item.SingleYing | currency: '￥'}}</td>
                        <td>{{item.MoreFirstYing | currency: '￥'}}</td>
                        <td>{{item.MoreSecondYing | currency: '￥'}}</td>
                        <td>{{item.MoreThreeYing | currency: '￥'}}</td>
                        <td></td>
                        <!--<td>{{item.IsEnable?'接单中':'已停用'}}</td>-->
                        <!--<td>{{getStatus('WX'+ item.State)}}</td>-->
                    </tr>
                    <tr ng-if="list.length <= 0|| totalItems<=0">
                        <td colspan="13">
                            暂无数据。
                        </td>
                    </tr>
                </table>
                <div class="txt-center">
                    <pagination num-pages="numPages" rotate="false" max-size="10" ng-change="pageChanged(currentPage)" items-per-page="pageSize" total-items="totalItems" ng-model="currentPage" class="pagination-sm" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></pagination>
                </div>
            </div>
        </div>

        <!-- 收藏-->
